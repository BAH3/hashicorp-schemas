{
    "$schema": "https://github.com/jboero/hashicorp-schemas/raw/master/JSON/vault/config.json",
    "api_addr": "http://localhost:8200",
    "disable_mlock": true,
    "seal": {
        "pkcs11": {
            "lib": "/usr/vault/lib/libCryptoki2_64.so"
        }
    },
    "storage": {
        "raft": {
            "path": "/var/lib/vault",
            "retry_join": [
                {
                    "leader_api_addr": "http://127.0.0.1:8200",
                    "leader_ca_cert": "/path/to/you/ca.pem",
                    "leader_client_cert": "/path/to/you/client.pem",
                    "leader_client_key": "/path/to/you/key.pem"
                }
            ]
        }
    },
    "ui": true,
    "listener": {
        "tcp": {
            "address": "127.0.0.1:8200",
            "tls_disable": 0
        }
    },
    "max_lease_ttl": "768h"
}